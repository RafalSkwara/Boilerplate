	body
	// Navigation
	nav.navbar.navbar-light.navbar-fixed-top(role='navigation')
		.container
			// Brand and toggle get grouped for better mobile display
			.navbar-header
				a.navbar-brand(href='#') Start Bootstrap
			// Collect the nav links, forms, and other content for toggling

	header#myCarousel.carousel.slide
		// Indicators
		ol.carousel-indicators
			li.active(data-target='#myCarousel', data-slide-to='0')
			li(data-target='#myCarousel', data-slide-to='1')
			li(data-target='#myCarousel', data-slide-to='2')
		// Wrapper for Slides
		.carousel-inner
			.carousel-item.active
				// Set the first background image using inline CSS below.
				.fill(style="background-image:url('./images/slide1.jpg');").flex-center-horizontal
					h2 Tworzymy receptury
			.carousel-item
				// Set the second background image using inline CSS below.
				.fill(style="background-image:url('./images/slide2.jpg');").flex-center-horizontal
					h2 Selekcjonujemy składniki
			.carousel-item
				// Set the third background image using inline CSS below.
				.fill(style="background-image:url('./images/slide3.jpg');").flex-center-horizontal
					h2 Warzymy świetne piwa
		// Controls

		a.carousel-control-prev(href='#myCarousel', role='button', data-slide='prev')
			span.carousel-control-prev-icon(aria-hidden='true')    
			span.sr-only Previous
		a.carousel-control-next(href='#myCarousel', role='button', data-slide='next')
			span.carousel-control-next-icon(aria-hidden='true')    
			span.sr-only Next



								


